F_LIB = -I$(LIBDIR)

CFLAGS = 

LDFLAGS =-L/usr/lib -lxml2 -lpthread -L/usr/local/mysql/lib/ -lmysqlclient
#-L/usr/local/memcached/lib -lmemcached
# -L$(BOOST_LIB) -lboost_regex

CPPFLAGS = $(CFLAGS) $(F_INCLUDE) -g -Wall
#-fpermissive
